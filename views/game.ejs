<!DOCTYPE html>
<html>
    <%- include ('./partials/head' ,{ title: 'Game' }) %>

    <body>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <button class="btn btn-primary" style="position: absolute; top: 25px; right: 5px;" onclick="window.location.href='/'">Back to Home</button>
                </div>
            </div>
          <!-- Modal -->
        <div class="modal fade" id="gameModal" tabindex="-1" role="dialog" aria-labelledby="gameModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="gameModalLabel">Game Over</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                
                <div id="status"> </div>
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="reset-game-button" class="btn btn-primary">Reset Game</button>
                </div>
            </div>
            </div>
        </div>
        <h1>Mines: <span id="mines-count">0</span></h1>
        <div id="board"></div>
        <br>
        <button id="flag-button">ðŸš©</button>
        <div id="timer">
            <span id="timer-minutes">00</span>:<span id="timer-seconds">00</span>
        </div>
        <button id="start-game-button">Start Game</button>
    </body>
</html>